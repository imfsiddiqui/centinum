# EditorConfig configuration file
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.{md,markdown}]
indent_size = 2
trim_trailing_whitespace = false

# YAML
[*.{yaml,yml}]
indent_size = 2

# HTML, CSS, JavaScript, JSON, and TypeScript
[*.{html,css,js,jsx,json,jsonc,ts,tsx}]
indent_size = 2

# Python
[*.py]
indent_size = 4
